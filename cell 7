# Cell 7

from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Conv2D, MaxPooling2D, Flatten, Dense

# Define the Sequential model
model = Sequential([
    # First Conv Block: Learn basic features (edges, corners)
    Conv2D(32, (3, 3), activation='relu', input_shape=(IMG_HEIGHT, IMG_WIDTH, 3)),
    MaxPooling2D(2, 2),
    
    # Second Conv Block: Learn complex features
    Conv2D(64, (3, 3), activation='relu'),
    MaxPooling2D(2, 2),
    
    # Third Conv Block (Optional, but helps accuracy)
    Conv2D(128, (3, 3), activation='relu'),
    MaxPooling2D(2, 2),
    
    # Flatten the 3D feature maps to 1D vector
    Flatten(),
    
    # Fully Connected Layer (Dense)
    Dense(512, activation='relu'),
    
    # Output Layer: 1 neuron with sigmoid for binary classification (cat or dog)
    Dense(1, activation='sigmoid') 
])

# Compile the model
from tensorflow.keras.optimizers import Adam

model.compile(
    optimizer=Adam(learning_rate=0.001), # Adam is a good default optimizer
    loss='binary_crossentropy', # Binary Crossentropy for 2 classes
    metrics=['accuracy']
)

# Display model summary
model.summary()
